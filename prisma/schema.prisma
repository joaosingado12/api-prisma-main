generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @default(autoincrement()) @id
  email String  @unique
  nome  String?
  senha String
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
  produtos Produto[]
  fornecedores Fornecedor[]
}

model Fornecedor {
  id    Int     @default(autoincrement()) @id
  nome  String
  email String  @unique
  cnpj String
  endereco String
  telefone String
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
  userId Int
  user User @relation(fields: [userId], references: [id])
  produtos Produto[]
}

model Produto {
  id    Int     @default(autoincrement()) @id
  nome String
  descricao String
  preco  Decimal
  quantidade Int
  codbarras String @unique
  lote String
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
  userId Int
  user User @relation(fields: [userId], references: [id])
  fornecedorId Int
  fornecedores Fornecedor @relation(fields: [fornecedorId], references: [id])
}